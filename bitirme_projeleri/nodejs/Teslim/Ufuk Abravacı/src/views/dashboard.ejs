<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard - NewsHub</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">NewsHub</a>
            <div>
                <a href="/" class="btn btn-outline-light me-2">Ana Sayfa</a>
                <a href="/posts" class="btn btn-outline-light me-2">Yazılar</a>
                <form action="/auth/logout" method="POST" class="d-inline">
                    <button type="submit" class="btn btn-outline-danger">Çıkış</button>
                </form>
            </div>
        </div>
    </nav>

    <div class="container py-5">
        <h1 class="mb-4">Dashboard</h1>
        
        <div class="row">
            <div class="col-md-4 mb-4">
                <div class="card">
                    <div class="card-body text-center">
                        <h5><%= user.name %></h5>
                        <p class="text-muted"><%= user.email %></p>
                        <span class="badge bg-secondary"><%= user.role %></span>
                    </div>
                </div>
            </div>
            
            <div class="col-md-8">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Yazılarım</h5>
                        
                        <% if (userPosts && userPosts.length > 0) { %>
                            <div class="list-group">
                                <% userPosts.forEach(post => { %>
                                    <div class="list-group-item">
                                        <h6><a href="/posts/<%= post._id %>"><%= post.title %></a></h6>
                                        <small class="text-muted">
                                            <%= new Date(post.createdAt).toLocaleDateString('tr-TR') %>
                                        </small>
                                        <div class="mt-2">
                                            <a href="/posts/<%= post._id %>/edit" class="btn btn-sm btn-outline-primary">Düzenle</a>
                                            <form action="/posts/<%= post._id %>/delete" method="POST" class="d-inline">
                                                <button type="submit" class="btn btn-sm btn-outline-danger" 
                                                        onclick="return confirm('Silmek istediğinizden emin misiniz?')">
                                                    Sil
                                                </button>
                                            </form>
                                        </div>
                                    </div>
                                <% }) %>
                            </div>
                        <% } else { %>
                            <p class="text-muted">Henüz yazınız bulunmuyor.</p>
                            <a href="/posts/new" class="btn btn-primary">İlk Yazıyı Ekle</a>
                        <% } %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>