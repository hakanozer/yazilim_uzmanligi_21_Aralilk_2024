<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Yazılar - NewsHub</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
</head>
<body>
    <nav class="navbar navbar-dark bg-dark">
        <div class="container">
            <a class="navbar-brand" href="/">NewsHub</a>
            <div>
                <a href="/" class="btn btn-outline-light me-2">Ana Sayfa</a>
                <% if (user) { %>
                    <a href="/posts/new" class="btn btn-primary">Yazı Ekle</a>
                <% } else { %>
                    <a href="/auth/login" class="btn btn-outline-light">Giriş Yap</a>
                <% } %>
            </div>
        </div>
    </nav>

    <div class="container py-5">
        <h1 class="mb-4">Tüm Yazılar</h1>
        
        <% if (posts && posts.length > 0) { %>
            <div class="row">
                <% posts.forEach(post => { %>
                    <div class="col-md-6 mb-4">
                        <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">
                                    <a href="/posts/<%= post._id %>"><%= post.title %></a>
                                </h5>
                                <p class="card-text">
                                    <%= post.content.substring(0, 100) %>...
                                </p>
                                <div class="d-flex justify-content-between">
                                    <small><%= post.author.name %></small>
                                    <small><%= new Date(post.createdAt).toLocaleDateString('tr-TR') %></small>
                                </div>
                            </div>
                        </div>
                    </div>
                <% }) %>
            </div>
        <% } else { %>
            <div class="text-center py-5">
                <p class="text-muted">Henüz yazı bulunmuyor.</p>
                <% if (user) { %>
                    <a href="/posts/new" class="btn btn-primary">İlk Yazıyı Ekle</a>
                <% } %>
            </div>
        <% } %>
    </div>
</body>
</html>