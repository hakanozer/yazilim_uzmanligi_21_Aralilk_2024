<!DOCTYPE html>
<html lang="tr">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title><%= post.title %> - NewsHub</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
    />
    <link
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css"
      rel="stylesheet"
    />
  </head>
  <body>
    <nav class="navbar navbar-dark bg-dark">
      <div class="container">
        <a class="navbar-brand" href="/">NewsHub</a>
        <div>
          <a href="/" class="btn btn-outline-light me-2">Ana Sayfa</a>
          <a href="/posts" class="btn btn-outline-light">Tüm Yazılar</a>
        </div>
      </div>
    </nav>

    <div class="container py-5">
      <div class="row justify-content-center">
        <div class="col-lg-8">
          <!-- Geri Butonu -->
          <div class="mb-4">
            <a href="/posts" class="btn btn-outline-secondary">
              <i class="fas fa-arrow-left me-2"></i>Tüm Yazılara Dön
            </a>
          </div>

          <!-- Yazı İçeriği -->
          <article class="card border-0 shadow-sm">
            <div class="card-body p-4">
              <!-- Başlık ve Meta Bilgiler -->
              <header class="mb-4">
                <h1 class="display-5 fw-bold text-dark mb-3">
                  <%= post.title %>
                </h1>

                <div
                  class="d-flex flex-wrap align-items-center text-muted mb-3"
                >
                  <div class="me-4">
                    <i class="fas fa-user me-1"></i>
                    <strong><%= post.author.name %></strong>
                  </div>
                  <div class="me-4">
                    <i class="fas fa-calendar me-1"></i>
                    <%= new Date(post.createdAt).toLocaleDateString('tr-TR') %>
                  </div>
                  <div class="me-4">
                    <i class="fas fa-eye me-1"></i>
                    <%= post.viewCount || 0 %> görüntülenme
                  </div>
                </div>

                <!-- Kategori ve Etiketler -->
                <div class="d-flex flex-wrap gap-2 mb-3">
                  <span class="badge bg-primary"><%= post.category %></span>
                  <% if (post.tags && post.tags.length > 0) { %> <%
                  post.tags.forEach(tag => { %>
                  <span class="badge bg-secondary"><%= tag %></span>
                  <% }) %> <% } %>
                </div>
              </header>

              <!-- İçerik -->
              <div class="post-content fs-5 lh-base">
                <% const lines = post.content.split('\n'); %> <%
                lines.forEach(line => { %>
                <p><%= line %></p>
                <% }) %>
              </div>

              <!-- Action Butonları -->
              <% if (user && (user.id === post.author._id.toString() ||
              user.role === 'admin')) { %>
              <hr class="my-4" />
              <div class="d-flex gap-2">
                <a
                  href="/posts/<%= post._id %>/edit"
                  class="btn btn-outline-primary"
                >
                  <i class="fas fa-edit me-2"></i>Düzenle
                </a>
                <form
                  action="/posts/<%= post._id %>/delete"
                  method="POST"
                  class="d-inline"
                >
                  <button
                    type="submit"
                    class="btn btn-outline-danger"
                    onclick="return confirm('Bu yazıyı silmek istediğinizden emin misiniz?')"
                  >
                    <i class="fas fa-trash me-2"></i>Sil
                  </button>
                </form>
              </div>
              <% } %>
            </div>
          </article>

          <!-- Yorumlar Bölümü -->
          <section class="mt-5">
            <div class="card border-0 shadow-sm">
              <div class="card-body p-4">
                <h5 class="card-title">
                  <i class="fas fa-comments me-2"></i>Yorumlar
                </h5>
                <p class="text-muted">Yorum özelliği yakında eklenecek...</p>
              </div>
            </div>
          </section>
        </div>
      </div>
    </div>

    <footer class="bg-dark text-light py-4 mt-5">
      <div class="container text-center">
        <p class="mb-0">&copy; 2024 NewsHub</p>
      </div>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
  </body>
</html>
