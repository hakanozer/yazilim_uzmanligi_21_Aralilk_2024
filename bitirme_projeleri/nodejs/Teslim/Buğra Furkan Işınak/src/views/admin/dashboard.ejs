<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Admin Panel - BFItalks</title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/css/style.css" rel="stylesheet">
</head>
<body class="bg-light">
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-primary">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/">
                <i class="fas fa-newspaper me-2"></i>BFItalks
            </a>
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/">
                    <i class="fas fa-home me-1"></i>Ana Sayfa
                </a>
                <a class="nav-link active" href="/admin">
                    <i class="fas fa-cog me-1"></i>Admin Panel
                </a>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container py-5">
        <div class="row">
            <div class="col-12">
                <h1 class="mb-4"><i class="fas fa-tachometer-alt me-2"></i>Admin Panel</h1>
                
                <!-- Admin Cards -->
                <div class="row">
                    <div class="col-md-4 mb-4">
                        <div class="card text-center">
                            <div class="card-body">
                                <i class="fas fa-tags text-primary" style="font-size: 3rem;"></i>
                                <h5 class="card-title mt-3">Kategori Yönetimi</h5>
                                <p class="card-text">Haber kategorilerini yönetin</p>
                                <a href="/admin/categories" class="btn btn-primary">
                                    <i class="fas fa-cog me-2"></i>Yönet
                                </a>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-4 mb-4">
                        <div class="card text-center">
                            <div class="card-body">
                                <i class="fas fa-newspaper text-success" style="font-size: 3rem;"></i>
                                <h5 class="card-title mt-3">Haber Yönetimi</h5>
                                <p class="card-text">Haberleri yönetin</p>
                                <div class="d-flex flex-column gap-2">
                                    <a href="/articles" class="btn btn-success btn-sm">
                                        <i class="fas fa-list me-2"></i>Tüm Haberler
                                    </a>
                                    <a href="/articles/new" class="btn btn-outline-success btn-sm">
                                        <i class="fas fa-plus me-2"></i>Yeni Haber
                                    </a>
                                </div>
                            </div>
                        </div>
                    </div>
                    
                    <div class="col-md-4 mb-4">
                        <div class="card text-center">
                            <div class="card-body">
                                <i class="fas fa-users text-info" style="font-size: 3rem;"></i>
                                <h5 class="card-title mt-3">Kullanıcı Yönetimi</h5>
                                <p class="card-text">Kullanıcıları yönetin</p>
                                <a href="/users" class="btn btn-info">
                                    <i class="fas fa-users me-2"></i>API
                                </a>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Statistics -->
                <div class="row mt-5">
                    <div class="col-12">
                        <h3>İstatistikler</h3>
                        <div class="row" id="statsContainer">
                            <div class="col-md-3 mb-3">
                                <div class="card text-center">
                                    <div class="card-body">
                                        <i class="fas fa-newspaper text-primary" style="font-size: 2rem;"></i>
                                        <h4 class="mt-2" id="totalArticles">-</h4>
                                        <p class="text-muted">Toplam Haber</p>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-3 mb-3">
                                <div class="card text-center">
                                    <div class="card-body">
                                        <i class="fas fa-tags text-success" style="font-size: 2rem;"></i>
                                        <h4 class="mt-2" id="totalCategories">-</h4>
                                        <p class="text-muted">Toplam Kategori</p>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-3 mb-3">
                                <div class="card text-center">
                                    <div class="card-body">
                                        <i class="fas fa-users text-info" style="font-size: 2rem;"></i>
                                        <h4 class="mt-2" id="totalUsers">-</h4>
                                        <p class="text-muted">Toplam Kullanıcı</p>
                                    </div>
                                </div>
                            </div>
                            
                            <div class="col-md-3 mb-3">
                                <div class="card text-center">
                                    <div class="card-body">
                                        <i class="fas fa-eye text-warning" style="font-size: 2rem;"></i>
                                        <h4 class="mt-2" id="totalViews">-</h4>
                                        <p class="text-muted">Toplam Görüntülenme</p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    
    <script>
        $(document).ready(function() {
            loadStatistics();
        });

        function loadStatistics() {
            // Load articles count
            $.ajax({
                url: '/api/articles?limit=1',
                method: 'GET',
                success: function(response) {
                    if (response.status === 'success') {
                        $('#totalArticles').text(response.data.total || 0);
                    }
                }
            });

            // Load categories count
            $.ajax({
                url: '/api/categories',
                method: 'GET',
                success: function(response) {
                    if (response.status === 'success') {
                        $('#totalCategories').text(response.data.categories.length);
                    }
                }
            });

            // Load users count (if endpoint exists)
            $.ajax({
                url: '/api/users?limit=1',
                method: 'GET',
                headers: {
                    'Authorization': 'Bearer ' + localStorage.getItem('token')
                },
                success: function(response) {
                    if (response.status === 'success') {
                        $('#totalUsers').text(response.data.total || 0);
                    }
                },
                error: function() {
                    $('#totalUsers').text('-');
                }
            });

            // Calculate total views
            $.ajax({
                url: '/api/articles?limit=100',
                method: 'GET',
                success: function(response) {
                    if (response.status === 'success') {
                        let totalViews = 0;
                        response.data.articles.forEach(article => {
                            totalViews += article.views || 0;
                        });
                        $('#totalViews').text(totalViews);
                    }
                }
            });
        }
    </script>
</body>
</html>
