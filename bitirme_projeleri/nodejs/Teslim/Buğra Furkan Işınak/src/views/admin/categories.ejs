                                        <option value="fas fa-heart">‚ù§Ô∏è Saƒülƒ±k</option>
                                        <option value="fas fa-graduation-cap">üéì Eƒüitim</option>
                                        <option value="fas fa-car">üöó Otomotiv</option>
                                        <option value="fas fa-home">üè† Emlak</option>
                                        <option value="fas fa-plane">‚úàÔ∏è Seyahat</option>
                                        <option value="fas fa-utensils">üçΩÔ∏è Yemek</option>
                                        <option value="fas fa-music">üéµ M√ºzik</option>
                                        <option value="fas fa-film">üé¨ Sinema</option>
                                        <option value="fas fa-gamepad">üéÆ Oyun</option>
                                        <option value="fas fa-palette">üé® Sanat</option>
                                        <option value="fas fa-book">üìö Kitap</option>
                                        <option value="fas fa-newspaper">üì∞ Haber</option>
                                        <option value="fas fa-globe">üåç D√ºnya</option>
                                        <option value="fas fa-star">‚≠ê Pop√ºler</option>
                                        <option value="fas fa-fire">üî• Trend</option>
                                        <option value="fas fa-bolt">‚ö° Hƒ±zlƒ±</option>
                                    </select>
                                </div>
                                <div class="col-md-4">
                                    <div class="d-flex align-items-center">
                                        <i id="iconPreview" class="fas fa-laptop me-2" style="font-size: 1.5rem;"></i>
                                        <span id="iconText">√ñnizleme</span>
