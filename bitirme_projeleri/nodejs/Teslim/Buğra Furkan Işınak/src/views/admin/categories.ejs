                                <input type="text" class="form-control" id="categoryName" name="name" required>
                            </div>
                            <div class="col-md-6 mb-3">
                                <label for="categoryColor" class="form-label">Renk *</label>
                                <input type="color" class="form-control form-control-color" id="categoryColor" name="color" value="#007bff" required>
                            </div>
                        </div>
                        
                        <div class="mb-3">
                            <label for="categoryDescription" class="form-label">A√ßƒ±klama</label>
                            <textarea class="form-control" id="categoryDescription" name="description" rows="3"></textarea>
                        </div>
                        
                        <div class="mb-3">
                            <label for="categoryIcon" class="form-label">ƒ∞kon</label>
                            <div class="row">
                                <div class="col-md-8">
                                    <select class="form-select" id="categoryIcon" name="icon">
                                        <option value="">ƒ∞kon Se√ßin</option>
                                        <option value="fas fa-laptop">üíª Teknoloji</option>
