                                </div>
                            </div>
                        </div>
                    </form>
                </div>
                <div class="modal-footer">
                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">ƒ∞ptal</button>
                    <button type="button" class="btn btn-primary" id="saveCategory">
                        <i class="fas fa-save me-2"></i>Kaydet
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    
    <script>
        let editingCategoryId = null;

        $(document).ready(function() {
            loadCategories();
            
            // Icon preview
            $('#categoryIcon').change(function() {
                const iconClass = $(this).val();
                if (iconClass) {
                    $('#iconPreview').attr('class', iconClass);
                } else {
                    $('#iconPreview').attr('class', 'fas fa-laptop');
                }
            });
            
            // Save category
            $('#saveCategory').click(function() {
                saveCategory();
            });
        });

        function loadCategories() {
            $.ajax({
                url: '/api/categories',
                method: 'GET',
                success: function(response) {
                    if (response.status === 'success') {
                        displayCategories(response.data.categories);
                    }
                },
                error: function() {
                    alert('Kategoriler y√ºklenirken hata olu≈ütu.');
                }
            });
        }

        function displayCategories(categories) {
            const tbody = $('#categoriesTable');
            tbody.empty();
            
            categories.forEach(category => {
                const row = `
                    <tr>
                        <td><i class="${category.icon || 'fas fa-tag'}" style="color: ${category.color}"></i></td>
                        <td>${category.name}</td>
                        <td>${category.description || '-'}</td>
                        <td>
                            <span class="badge" style="background-color: ${category.color}">
                                ${category.color}
                            </span>
                        </td>
                        <td>
                            <span class="badge bg-${category.isActive ? 'success' : 'danger'}">
                                ${category.isActive ? 'Aktif' : 'Pasif'}
                            </span>
                        </td>
                        <td>
                            <button class="btn btn-sm btn-outline-primary me-2" onclick="editCategory('${category._id}')">
                                <i class="fas fa-edit"></i>
                            </button>
                            <button class="btn btn-sm btn-outline-danger" onclick="deleteCategory('${category._id}')">
                                <i class="fas fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                `;
                tbody.append(row);
            });
        }

        function saveCategory() {
            const formData = {
                name: $('#categoryName').val(),
                description: $('#categoryDescription').val(),
                color: $('#categoryColor').val(),
                icon: $('#categoryIcon').val()
            };

            const url = editingCategoryId ? `/api/categories/${editingCategoryId}` : '/api/categories';
            const method = editingCategoryId ? 'PUT' : 'POST';

            $.ajax({
                url: url,
                method: method,
                contentType: 'application/json',
                headers: {
                    'Authorization': 'Bearer ' + localStorage.getItem('token')
                },
                data: JSON.stringify(formData),
                success: function(response) {
                    if (response.status === 'success') {
                        $('#categoryModal').modal('hide');
                        loadCategories();
                        resetForm();
                        alert(editingCategoryId ? 'Kategori g√ºncellendi!' : 'Kategori olu≈üturuldu!');
                    }
                },
                error: function(xhr) {
                    const error = xhr.responseJSON;
                    alert(error.message || 'Kategori kaydedilirken hata olu≈ütu.');
                }
            });
        }

        function editCategory(categoryId) {
            $.ajax({
                url: `/api/categories/${categoryId}`,
                method: 'GET',
                success: function(response) {
                    if (response.status === 'success') {
                        const category = response.data.category;
                        editingCategoryId = categoryId;
                        
                        $('#categoryModalTitle').text('Kategori D√ºzenle');
                        $('#categoryName').val(category.name);
                        $('#categoryDescription').val(category.description);
                        $('#categoryColor').val(category.color);
                        $('#categoryIcon').val(category.icon);
                        $('#iconPreview').attr('class', category.icon || 'fas fa-laptop');
                        
                        $('#categoryModal').modal('show');
                    }
                },
                error: function() {
                    alert('Kategori bilgileri alƒ±nƒ±rken hata olu≈ütu.');
                }
            });
        }

        function deleteCategory(categoryId) {
            if (confirm('Bu kategoriyi silmek istediƒüinizden emin misiniz?')) {
                $.ajax({
                    url: `/api/categories/${categoryId}`,
                    method: 'DELETE',
                    headers: {
                        'Authorization': 'Bearer ' + localStorage.getItem('token')
                    },
                    success: function(response) {
                        if (response.status === 'success') {
                            loadCategories();
                            alert('Kategori silindi!');
                        }
                    },
                    error: function(xhr) {
                        const error = xhr.responseJSON;
                        alert(error.message || 'Kategori silinirken hata olu≈ütu.');
                    }
                });
            }
        }

        function resetForm() {
            editingCategoryId = null;
            $('#categoryModalTitle').text('Yeni Kategori');
            $('#categoryForm')[0].reset();
            $('#categoryColor').val('#007bff');
            $('#iconPreview').attr('class', 'fas fa-laptop');
        }
    </script>
</body>
</html>
