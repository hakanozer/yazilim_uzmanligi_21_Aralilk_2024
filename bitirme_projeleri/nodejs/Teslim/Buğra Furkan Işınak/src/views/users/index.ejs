<!DOCTYPE html>
<html lang="tr">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title><%= title %></title>
    
    <!-- Bootstrap CSS -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/css/bootstrap.min.css" rel="stylesheet">
    <!-- Font Awesome -->
    <link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css" rel="stylesheet">
    <!-- Custom CSS -->
    <link href="/css/style.css" rel="stylesheet">
</head>
<body>
    <!-- Navigation -->
    <nav class="navbar navbar-expand-lg navbar-dark">
        <div class="container">
            <a class="navbar-brand fw-bold" href="/">
                <i class="fas fa-newspaper me-2"></i>BFItalks
            </a>
            <div class="navbar-nav ms-auto">
                <a class="nav-link" href="/">
                    <i class="fas fa-home me-1"></i>Ana Sayfa
                </a>
                <a class="nav-link" href="/articles">
                    <i class="fas fa-newspaper me-1"></i>Haberler
                </a>
                <a class="nav-link active" href="/users">
                    <i class="fas fa-users me-1"></i>Kullanıcılar
                </a>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container py-5">
        <!-- Hero Section -->
        <div class="hero-section">
            <div class="container py-5">
                <div class="row align-items-center">
                    <div class="col-lg-8">
                        <div class="d-flex align-items-center mb-4">
                            <div class="category-icon me-4">
                                <i class="fas fa-users" style="font-size: 4rem;"></i>
                            </div>
                            <div>
                                <h1 class="display-4 fw-bold mb-2">Tüm Kullanıcılar</h1>
                                <p class="lead mb-0">Platformdaki tüm kullanıcıları görüntüleyin</p>
                            </div>
                        </div>
                    </div>
                    <div class="col-lg-4 text-end">
                        <div class="category-stats">
                            <div class="row text-center">
                                <div class="col-6">
                                    <h3 class="fw-bold" id="userCount"><%= pagination.total %></h3>
                                    <small class="text-muted">Kullanıcı</small>
                                </div>
                                <div class="col-6">
                                    <h3 class="fw-bold" id="adminCount"><%= users.filter(u => u.roles.includes('admin')).length %></h3>
                                    <small class="text-muted">Admin</small>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>

        <!-- Users Grid -->
        <div class="row" id="usersGrid">
            <% users.forEach(user => { %>
            <div class="col-lg-4 col-md-6 mb-4">
                <div class="card user-card h-100">
                    <div class="card-body text-center">
                        <!-- Profile Picture -->
                        <div class="profile-avatar mx-auto mb-3 position-relative">
                            <% if (user.profilePicture && user.profilePicture !== '/images/default-avatar.png') { %>
                                <img src="<%= user.profilePicture %>" alt="<%= user.fullName %>" class="rounded-circle" style="width: 80px; height: 80px; object-fit: cover;">
                            <% } else { %>
                                <div class="rounded-circle d-flex align-items-center justify-content-center" style="width: 80px; height: 80px; background-color: var(--bg-tertiary); border: 3px solid var(--border-primary);">
                                    <i class="fas fa-user" style="font-size: 2rem; color: var(--text-muted);"></i>
                                </div>
                            <% } %>
                            <!-- Role Badge -->
                            <span class="position-absolute top-0 end-0 badge <%= user.roles.includes('admin') ? 'bg-danger' : 'bg-primary' %>" style="font-size: 0.7rem;">
                                <%= user.roles.includes('admin') ? 'Admin' : 'User' %>
                            </span>
                        </div>

                        <!-- User Info -->
                        <h5 class="card-title mb-1"><%= user.fullName %></h5>
                        <p class="text-muted mb-2"><%= user.email %></p>
                        
                        <% if (user.bio) { %>
                            <p class="card-text text-muted small mb-3" style="max-height: 60px; overflow: hidden;">
                                <%= user.bio.length > 100 ? user.bio.substring(0, 100) + '...' : user.bio %>
                            </p>
                        <% } %>

                        <!-- User Stats -->
                        <div class="row text-center mb-3">
                            <div class="col-4">
                                <small class="text-muted d-block">Kayıt</small>
                                <small class="fw-bold"><%= new Date(user.createdAt).toLocaleDateString('tr-TR') %></small>
                            </div>
                            <div class="col-4">
                                <small class="text-muted d-block">Son Giriş</small>
                                <small class="fw-bold">
                                    <%= user.lastLogin ? new Date(user.lastLogin).toLocaleDateString('tr-TR') : 'Hiç' %>
                                </small>
                            </div>
                            <div class="col-4">
                                <small class="text-muted d-block">Durum</small>
                                <small class="fw-bold <%= user.isActive ? 'text-success' : 'text-danger' %>">
                                    <%= user.isActive ? 'Aktif' : 'Pasif' %>
                                </small>
                            </div>
                        </div>

                        <!-- Action Buttons -->
                        <div class="d-flex gap-2 justify-content-center">
                            <button class="btn btn-outline-primary btn-sm" onclick="viewUser('<%= user._id %>')">
                                <i class="fas fa-eye me-1"></i>Görüntüle
                            </button>
                            <% if (user.roles.includes('admin')) { %>
                                <button class="btn btn-outline-warning btn-sm" onclick="editUser('<%= user._id %>')">
                                    <i class="fas fa-edit me-1"></i>Düzenle
                                </button>
                            <% } %>
                        </div>
                    </div>
                </div>
            </div>
            <% }); %>
        </div>

        <!-- Empty State -->
        <% if (users.length === 0) { %>
        <div class="text-center py-5">
            <i class="fas fa-users fa-3x text-muted mb-3"></i>
            <h4 class="text-muted">Henüz kullanıcı bulunmuyor</h4>
            <p class="text-muted">İlk kullanıcı kaydolduğunda burada görünecek.</p>
        </div>
        <% } %>

        <!-- Pagination -->
        <% if (pagination.pages > 1) { %>
        <nav aria-label="Users pagination" class="mt-5">
            <ul class="pagination justify-content-center">
                <!-- Previous Page -->
                <% if (pagination.page > 1) { %>
                    <li class="page-item">
                        <a class="page-link" href="?page=<%= pagination.page - 1 %>&limit=<%= pagination.limit %>">
                            <i class="fas fa-chevron-left"></i> Önceki
                        </a>
                    </li>
                <% } %>

                <!-- Page Numbers -->
                <% for (let i = Math.max(1, pagination.page - 2); i <= Math.min(pagination.pages, pagination.page + 2); i++) { %>
                    <li class="page-item <%= i === pagination.page ? 'active' : '' %>">
                        <a class="page-link" href="?page=<%= i %>&limit=<%= pagination.limit %>"><%= i %></a>
                    </li>
                <% } %>

                <!-- Next Page -->
                <% if (pagination.page < pagination.pages) { %>
                    <li class="page-item">
                        <a class="page-link" href="?page=<%= pagination.page + 1 %>&limit=<%= pagination.limit %>">
                            Sonraki <i class="fas fa-chevron-right"></i>
                        </a>
                    </li>
                <% } %>
            </ul>
        </nav>
        <% } %>
    </div>

    <!-- Footer -->
    <footer class="footer py-4 mt-5">
        <div class="container">
            <div class="row">
                <div class="col-md-6">
                    <h5 class="fw-bold mb-3">
                        <i class="fas fa-newspaper me-2"></i>Habercilik.com
                    </h5>
                    <p class="text-muted">Türkiye'nin en güncel haber platformu</p>
                </div>
                <div class="col-md-6 text-md-end">
                    <div class="d-flex justify-content-md-end gap-3">
                        <a href="/" class="text-muted text-decoration-none">
                            <i class="fas fa-home me-1"></i>Ana Sayfa
                        </a>
                        <a href="/articles" class="text-muted text-decoration-none">
                            <i class="fas fa-newspaper me-1"></i>Haberler
                        </a>
                        <a href="/users" class="text-muted text-decoration-none">
                            <i class="fas fa-users me-1"></i>Kullanıcılar
                        </a>
                    </div>
                    <p class="text-muted mt-2 mb-0">
                        © 2024 Habercilik.com. Tüm hakları saklıdır.
                    </p>
                </div>
            </div>
        </div>
    </footer>

    <!-- Bootstrap JS -->
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.2/dist/js/bootstrap.bundle.min.js"></script>
    <!-- jQuery -->
    <script src="https://code.jquery.com/jquery-3.7.1.min.js"></script>
    <!-- Theme Script -->
    <script src="/js/theme.js"></script>

    <script>
        // User actions
        function viewUser(userId) {
            // TODO: Implement user view modal or page
            alert('Kullanıcı görüntüleme: ' + userId);
        }

        function editUser(userId) {
            // TODO: Implement user edit modal or page
            alert('Kullanıcı düzenleme: ' + userId);
        }

        // Initialize page
        $(document).ready(function() {
            console.log('Users page loaded');
            console.log('Total users:', <%= pagination.total %>);
            console.log('Current page:', <%= pagination.page %>);
        });
    </script>
</body>
</html>
