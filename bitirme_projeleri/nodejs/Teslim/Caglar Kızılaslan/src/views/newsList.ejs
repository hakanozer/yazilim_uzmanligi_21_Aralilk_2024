<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>NewsHub - <%= (user && user.role === 'admin') ? 'Yönetim Paneli' : 'Yazılar' %></title>
    <%- include('template/bootstrap') %>
</head>
<body class="fade-in-up">
    <div class="container mt-4">
        <div class="row">
            <%- include('template/leftMenu') %>
            <div class="col-sm-9">
                <!-- Header Section -->
                <div class="d-flex align-items-center justify-content-between mb-4">
                    <div>
                        <h1 class="text-gradient fw-bold mb-2">
                            <%= (user && user.role === 'admin') ? 'Yönetim Paneli' : 'Yazılar' %>
                        </h1>
                        <p class="text-muted mb-0">
                            <%= (user && user.role === 'admin') ? 'Sistem yönetimi ve istatistikler' : 'Tüm yazıları görüntüleyin' %>
                        </p>
                    </div>
                    <div class="d-flex align-items-center">
                        <a href="/news" class="btn btn-primary btn-lg">
                            <i class="bi bi-plus-circle me-2"></i>Yeni Yazı
                        </a>
                    </div>
                </div>

                <% if (user && user.role === 'admin') { %>
                  <!-- Stats Cards -->
                  <div class="row g-3 mb-3">
                    <div class="col-md-4">
                      <div class="card border-0 shadow-sm">
                        <div class="card-body">
                          <div class="d-flex justify-content-between align-items-center">
                            <div>
                              <div class="text-muted">Total Posts</div>
                              <div class="h4 mb-0"><%= (stats && stats.totalPosts) ? stats.totalPosts : 0 %></div>
                            </div>
                            <i class="bi bi-file-earmark-text h2 text-primary"></i>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="col-md-4">
                      <div class="card border-0 shadow-sm">
                        <div class="card-body">
                          <div class="d-flex justify-content-between align-items-center">
                            <div>
                              <div class="text-muted">Total Users</div>
                              <div class="h4 mb-0"><%= (stats && stats.totalUsers) ? stats.totalUsers : 0 %></div>
                            </div>
                            <i class="bi bi-people h2 text-success"></i>
                          </div>
                        </div>
                      </div>
                    </div>
                    <div class="col-md-4">
                      <div class="card border-0 shadow-sm">
                        <div class="card-body">
                          <div class="d-flex justify-content-between align-items-center">
                            <div>
                              <div class="text-muted">Posts Today</div>
                              <div class="h4 mb-0"><%= (stats && stats.postsToday) ? stats.postsToday : 0 %></div>
                            </div>
                            <i class="bi bi-lightning-charge h2 text-warning"></i>
                          </div>
                        </div>
                      </div>
                    </div>
                  </div>

                  <!-- Search / Filters -->
                  <form class="card border-0 shadow-sm mb-3" method="get" action="/news/list">
                    <div class="card-body">
                      <div class="row g-3">
                        <div class="col-md-4">
                          <label class="form-label">Search Title</label>
                          <input type="text" name="q" value="<%= (filters && filters.q) ? filters.q : '' %>" class="form-control" placeholder="e.g., breaking news">
                        </div>
                        <div class="col-md-4">
                          <label class="form-label">Owner</label>
                          <select name="owner" class="form-select">
                            <option value="">All Owners</option>
                            <% if (users && users.length) { %>
                              <% users.forEach(function(u){ %>
                                <option value="<%= u._id %>" <%= (filters && filters.owner === String(u._id)) ? 'selected' : '' %>><%= u.surname %> <%= u.lastname %></option>
                              <% }) %>
                            <% } %>
                          </select>
                        </div>
                        <div class="col-md-2">
                          <label class="form-label">From</label>
                          <input type="date" name="from" value="<%= (filters && filters.from) ? filters.from : '' %>" class="form-control">
                        </div>
                        <div class="col-md-2">
                          <label class="form-label">To</label>
                          <input type="date" name="to" value="<%= (filters && filters.to) ? filters.to : '' %>" class="form-control">
                        </div>
                      </div>
                      <div class="mt-3 d-flex gap-2">
                        <button type="submit" class="btn btn-outline-primary">Apply</button>
                        <a href="/news/list" class="btn btn-outline-secondary">Reset</a>
                      </div>
                    </div>
                  </form>
                <% } %>

                <% if (posts && posts.length) { %>
>
                  <div class="content-list">
                    <ul class="list-group">
                      <% posts.forEach(function(p){ %>
                        <li class="list-group-item">
                          <a href="/news/<%= p._id %>" class="text-decoration-none"><%= p.title %></a>
                          <% if (p.detail) { %>
                            <div class="text-muted"><%= (p.detail.length > 140) ? (p.detail.slice(0, 140) + '...') : p.detail %></div>
                          <% } %>
                          <div class="meta">
                            <span><i class="bi bi-calendar3 me-1"></i><%= new Date(p.date).toLocaleString('tr-TR') %></span>
                            <% if (user && user.role === 'admin') { %>
                              <span class="ms-2"><i class="bi bi-person me-1"></i><%= p.userID && p.userID.surname ? (p.userID.surname + ' ' + p.userID.lastname) : '-' %></span>
                            <% } %>
                          </div>
                          <div class="actions">
                            <% if (user && (user.role === 'admin' || String(user._id) === String((p.userID && p.userID._id) ? p.userID._id : p.userID))) { %>
                              <a href="/news/<%= p._id %>" class="btn btn-sm btn-outline-primary"><i class="bi bi-pencil-square me-1"></i>Düzenle</a>
                              <form action="/news/delete/<%= p._id %>" method="post" class="d-inline">
                                <button type="submit" class="btn btn-sm btn-outline-danger"><i class="bi bi-trash me-1"></i>Sil</button>
                              </form>
                            <% } %>
                          </div>
                        </li>
                      <% }) %>
                    </ul>
                  </div>
                <% } else { %>
                    <div class="alert alert-info">Henüz içerik yok.</div>
                <% } %>

                <% if (user && user.role === 'admin') { %>
                  <h3 class="mt-4">Users Management</h3>
                  <% if (users && users.length) { %>
                    <div class="table-responsive">
                      <table class="table table-striped table-sm">
                        <thead>
                          <tr>
                            <th>Numara</th>
                            <th>Name</th>
                            <th>Email</th>
                            <th>Role</th>
                            <th>Date</th>
                            <th class="text-end">Actions</th>
                          </tr>
                        </thead>
                        <tbody>
                          <% users.forEach(function(u, idx){ %>
                            <tr>
                              <td><%= idx + 1 %></td>
                              <td><%= u.surname %> <%= u.lastname %></td>
                              <td><%= u.email %></td>
                              <td><span class="badge bg-<%= u.role === 'admin' ? 'success' : 'secondary' %>"><%= u.role %></span></td>
                              <td><%= new Date(u.date).toLocaleString('tr-TR') %></td>
                              <td class="text-end">
                                <a href="/admin/users/<%= u._id %>" class="btn btn-sm btn-outline-success me-2">Edit</a>
                                <form action="/admin/users/<%= u._id %>/delete" method="post" class="d-inline" onsubmit="return confirm('Delete this user? This will remove their posts.');">
                                  <button type="submit" class="btn btn-sm btn-outline-danger">Delete</button>
                                </form>
                              </td>
                            </tr>
                          <% }) %>
                        </tbody>
                      </table>
                    </div>
                  <% } else { %>
                    <div class="alert alert-info">No users found.</div>
                  <% } %>
                <% } %>

            </div>
        </div>
    </div>
</body>
</html>