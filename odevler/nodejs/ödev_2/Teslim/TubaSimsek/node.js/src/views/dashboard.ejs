<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <%- include('template/bootstrap') %>
</head>

<body>

    <div class="container">
        <h2>Dashboard</h2>
        <div class="row">
            <div class="col-sm-3">
                <div class="list-group">
                    <a href="#" class="list-group-item list-group-item-action active" aria-current="true">
                        The current link item
                    </a>
                    <a href="#" class="list-group-item list-group-item-action">A second link item</a>
                    <a href="#" class="list-group-item list-group-item-action">A third link item</a>
                    <a href="#" class="list-group-item list-group-item-action">A fourth link item</a>
                    <a href="#" class="list-group-item list-group-item-action disabled" aria-disabled="true">A disabled
                        link item</a>
                </div>

                <div class="list-group mt-3">
                    <li class="list-group-item list-group-item-secondary">Notes</li>
                    <a href="#" class="list-group-item list-group-item-action">Note - 1</a>
                    <a href="#" class="list-group-item list-group-item-action">Note - 2</a>
                    <a href="#" class="list-group-item list-group-item-action">Note - 3</a>
                    <a href="#" class="list-group-item list-group-item-action">Note - 4</a>
                    <a href="#" class="list-group-item list-group-item-action">Note - 5</a>
                </div>
            </div>

            <!-- backand'in veriyi alması için form içine action ve input name ekledim -->
            <div class="col-sm-9">
                <h4>Note Add</h4>
                <form action="/dashboard/note" method="post">
                    <div class="mb-3">
                        <input name="title" class="form-control" placeholder="Title" />
                    </div>
                    <div class="mb-3">
                        <textarea name="detail" class="form-control" placeholder="Detail"></textarea>
                    </div>
                    <div class="mb-3">
                        <input name="date" class="form-control" type="datetime-local" />
                    </div>
                    <div class="mb-3">
                        <input name="color" type="color" />
                    </div>
                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-success">Add</button>
                        <button type="reset" class="btn btn-danger">Reset</button>
                    </div>
                </form>
            </div>


            <!-- notları listelemek için gerekli ejs kodları -->
            <% if (typeof notes !== 'undefined' && notes.length > 0) { %>
  <% notes.forEach(n => { %>
    <a href="#" class="list-group-item list-group-item-action">
      <%= n.title %> - <%= n.detail %>
    </a>
  <% }) %>
<% } else { %>
  <p>No notes found.</p>
<% } %>




</body>

</html>