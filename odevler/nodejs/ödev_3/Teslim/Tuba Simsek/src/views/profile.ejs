<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Profile</title>
    <%- include('template/bootstrap') %>
  </head>

  <body>
    <div class="container">
      <h2>Profile</h2>
      <div class="row">
        <%- include('template/leftMenu') %>
        <div class="col-sm-9">
          <!-- alert ile uyarı -->
          <% if (typeof error !=="undefined" ) { %>
          <div
            class="alert alert-danger alert-dismissible fade show"
            role="alert"
          >
            <strong>Error!</strong>
            <%= error %>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="alert"
              aria-label="Close"
            ></button>
          </div>
          <% } %> <% if (typeof success !=="undefined" ) { %>
          <div
            class="alert alert-success alert-dismissible fade show"
            role="alert"
          >
            <strong>Success!</strong>
            <%= success %>
            <button
              type="button"
              class="btn-close"
              data-bs-dismiss="alert"
              aria-label="Close"
            ></button>
          </div>
          <% } %> <% if (typeof error !== "undefined") { %>
          <div class="alert alert-danger"><%= error %></div>
          <% } %> <% if (typeof success !== "undefined") { %>
          <div class="alert alert-success"><%= success %></div>
          <% } %>

          <!-- alert ile uyarı son -->

          <h4>Profile</h4>
          <form action="/profile" method="post">
            <div class="mb-3">
              <input
                value="<%= user.name %>"
                name="name"
                class="form-control"
                placeholder="Name"
              />
            </div>
            <div class="mb-3">
              <input
                value="<%= user.email %>"
                name="email"
                class="form-control"
                placeholder="E-mail"
              />
            </div>
            <div class="d-flex justify-content-between">
              <button type="submit" class="btn btn-success">Güncelle</button>
              <button type="reset" class="btn btn-danger">Temizle</button>
            </div>
          </form>

          <br />
          <!-- Şifre yenileme formu -->
          <h4>Şifre Yenileme</h4>
          <form action="/profile/password" method="post">
            <div class="mb-3">
              <input
                type="password"
                name="password"
                class="form-control"
                placeholder="Yeni Şifre"
                required
              />
            </div>
            <div class="mb-3">
              <input
                type="password"
                name="passwordConfirm"
                class="form-control"
                placeholder="Yeni Şifre Tekrar"
                required
              />
            </div>
            <div class="d-flex justify-content-between">
              <button type="submit" class="btn btn-success">
                Şifreyi Güncelle
              </button>
              <button type="reset" class="btn btn-danger">Temizle</button>
            </div>
          </form>
          <!-- Şifre yenileme formu bitiş -->
        </div>
      </div>
    </div>
  </body>
</html>
