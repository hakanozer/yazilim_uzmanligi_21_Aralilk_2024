<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Dashboard</title>
    <%- include('template/bootstrap') %>
</head>
<body>
    
    <div class="container">
        <h2>Dashboard</h2>
        <div class="row">
            <%- include('template/leftMenu') %>
            <div class="col-sm-9">
                <% if (typeof status != 'undefined') { %>
                 
                    <% if (status === true) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <strong>Success</strong> Note Add Success
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    <script>
                        setTimeout(() => {
                            window.location.href = '/dashboard'
                        }, 3000);
                    </script>
                    <% }else { %>
                    <div class="alert alert-danger alert-dismissible fade show" role="alert">
                        <strong>Error!</strong> <%= status %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                    </div>
                    <%}%>

                <% } %>
                 
                <h4>Note Add</h4>
                <form action="/dashboard/noteAdd" method="post">
                    <div class="mb-3">
                        <input name="title" class="form-control" placeholder="Title"/>
                    </div>
                    <div class="mb-3">
                        <textarea name="detail" class="form-control" placeholder="Detail"></textarea>
                    </div>
                    <div class="mb-3">
                        <input name="date" class="form-control" type="datetime-local" />
                    </div>
                    <div class="mb-3">
                        <input name="color" type="color" />
                    </div>
                    <div class="d-flex justify-content-between">
                        <button type="submit" class="btn btn-success">Add</button>
                        <button type="reset" class="btn btn-danger">Reset</button>
                    </div>
                </form>
                <hr/>
                <form action="/dashboard/search" method="get" class="d-flex col-sm-6">
                    <input name="q" class="form-control me-2 form-control-sm" type="search" placeholder="Title, Detail" aria-label="Search" value="<%= typeof search != 'undefined' ? search : '' %>">
                    <button class="btn btn-outline-success btn-sm" type="submit">Search</button>
                </form>

                <!-- Search results section -->
                <% if (typeof isSearching !== 'undefined' && isSearching) { %>
                    <div class="mt-3">
                        <div class="d-flex justify-content-between align-items-center">
                            <h5>Search Results for: "<%= search %>"</h5>
                            <a href="/dashboard" class="btn btn-secondary btn-sm">Show All Notes</a>
                        </div>
                        <% if (searchResults && searchResults.length > 0) { %>
                            <div class="alert alert-info">
                                <%= searchResults.length %> result(s) found
                            </div>
                        <% } else { %>
                            <div class="alert alert-warning">
                                No notes found matching your search criteria.
                            </div>
                        <% } %>
                    </div>
                <% } %>

                <table class="table table-hover mt-4">
                <thead>
                    <tr>
                    <th scope="col">Title</th>
                    <th scope="col">Detail</th>
                    <th scope="col">Color</th>
                    <th scope="col">Date</th>
                    <th scope="col">Actions</th>
                    </tr>
                </thead>
                <tbody>
                <!-- Show searchResults if searching, otherwise show normal notes -->
                <% 
                    let displayNotes = (typeof isSearching !== 'undefined' && isSearching) ? searchResults : notes;
                %>
                <% if (typeof displayNotes != 'undefined' && displayNotes.length > 0) { %>
                    <% displayNotes.forEach(note => { %>
                        <tr>
                            <td>
                                <!-- Highlight search term -->
                                <% if (typeof search !== 'undefined' && search) { %>
                                    <%- note.title.replace(new RegExp(search, 'gi'), '<mark>$&</mark>') %>
                                <% } else { %>
                                    <%= note.title %>
                                <% } %>
                            </td>
                            <td>
                                <!-- Highlight search term -->
                                <% if (typeof search !== 'undefined' && search) { %>
                                    <%- note.detail.replace(new RegExp(search, 'gi'), '<mark>$&</mark>') %>
                                <% } else { %>
                                    <%= note.detail %>
                                <% } %>
                            </td>
                            <td><div style="width: 30px; height: 30px; background-color:<%= note.color %>"></div></td>
                            <td><%= new Date(note.date).toLocaleDateString('tr-TR') %></td>
                            <td>
                                <a href="/dashboard/noteDelete/<%= note._id %>" class="btn btn-danger btn-sm"><i class="bi bi-trash"></i></a>
                                <a href="/dashboard/noteEdit/<%= note._id %>" class="btn btn-primary btn-sm"><i class="bi bi-pencil"></i></a>
                            </td>
                        </tr>
                    <% }) %>
                <% } else if (typeof isSearching !== 'undefined' && isSearching) { %>
                    <tr>
                        <td colspan="5" class="text-center text-muted">No search results found</td>
                    </tr>
                <% } else { %>
                    <tr>
                        <td colspan="5" class="text-center text-muted">No notes added yet</td>
                    </tr>
                <% } %>
                </tbody>
                </table>

            </div>
        </div>
    </div>
</body>
</html>