@page
@model MVC.Pages.Account.RegisterModel
@{
    ViewData["PageTitle"] = "Register";
    Layout = "_Layout";
}

<div class="container d-flex justify-content-center align-items-center" style="min-height: 85vh;">
    <div class="card shadow-sm" style="max-width: 420px; width:100%;">
        <div class="card-body p-4">
            <h3 class="text-center mb-4 fw-semibold">Create Account</h3>

            <!-- Validasyon özetini sadece hata varsa göster -->
            @if (!ViewData.ModelState.IsValid && ViewData.ModelState.ErrorCount > 0)
            {
                <div asp-validation-summary="All" class="alert alert-danger" role="alert"></div>
            }

            <form method="post" asp-page="/Account/Register" novalidate>
                @Html.AntiForgeryToken()

                <!-- Name -->
                <div class="form-floating mb-3">
                    <input asp-for="RegisterDto.Name" name="Name" class="form-control" id="Name" placeholder="Enter your name" />
                    <label asp-for="RegisterDto.Name">Name</label>
                    <span asp-validation-for="RegisterDto.Name" class="text-danger small"></span>
                </div>

                <!-- Surname -->
                <div class="form-floating mb-3">
                    <input asp-for="RegisterDto.Surname" name="Surname" class="form-control" id="Surname" placeholder="Enter your surname" />
                    <label asp-for="RegisterDto.Surname">Surname</label>
                    <span asp-validation-for="RegisterDto.Surname" class="text-danger small"></span>
                </div>

                <!-- Email -->
                <div class="form-floating mb-3">
                    <input asp-for="RegisterDto.Email" type="email" name="Email" class="form-control" id="Email" placeholder="name@example.com" />
                    <label asp-for="RegisterDto.Email">Email</label>
                    <span asp-validation-for="RegisterDto.Email" class="text-danger small"></span>
                </div>

                <!-- Password -->
                <div class="form-floating mb-4">
                    <input asp-for="RegisterDto.Password" type="password" name="Password" class="form-control" id="Password" placeholder="Enter your password" />
                    <label asp-for="RegisterDto.Password">Password</label>
                    <span asp-validation-for="RegisterDto.Password" class="text-danger small"></span>
                </div>

                <button type="submit" class="btn btn-success w-100 fw-semibold py-2">
                    Register
                </button>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}