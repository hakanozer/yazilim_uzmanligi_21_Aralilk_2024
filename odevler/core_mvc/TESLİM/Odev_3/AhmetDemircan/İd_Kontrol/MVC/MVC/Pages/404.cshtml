@page
@{
    Layout = null;
}
<!DOCTYPE html>
<html lang="tr">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>404 <br> You Look Lost</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link
        href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700;900&family=Rajdhani:wght@300;500;700&display=swap"
        rel="stylesheet">
    <style>
        :root {
            --neon-pink: #ff00ff;
            --neon-blue: #00ffff;
            --neon-purple: #bd00ff;
        }

        body {
            background-color: #050505;
            font-family: 'Rajdhani', sans-serif;
            overflow: hidden;
            color: white;
            margin: 0;
            padding: 0;
        }

        /* Background Image with Overlay */
        .bg-scene {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            /* Blade Runner 2049 Joi Pointing Scene URL */
            background: url('/img/background.jpg') no-repeat center center fixed;
            background-size: cover;
            z-index: 0;
        }

        /* Dark overlay to make text readable but keep image visible */
        .bg-overlay {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            background: linear-gradient(to right, rgba(0, 0, 0, 0.8) 0%, rgba(0, 0, 0, 0.2) 50%, rgba(0, 0, 0, 0.4) 100%);
            z-index: 1;
        }

        /* Rain Canvas */
        #rain-canvas {
            position: absolute;
            top: 0;
            left: 0;
            width: 100%;
            height: 100%;
            z-index: 2;
            pointer-events: none;
            opacity: 0.5;
        }

        /* Content Wrapper */
        .content-wrapper {
            position: relative;
            z-index: 10;
            height: 100vh;
            width: 100vw;
            display: flex;
            flex-direction: column;
            justify-content: center;
        }

        /* Text Styles */
        .glitch-text {
            font-family: 'Orbitron', sans-serif;
            color: var(--neon-pink);
            text-shadow: 0 0 10px var(--neon-pink), 0 0 20px var(--neon-purple);
            animation: textFlicker 3s infinite alternate;
        }

        .subtitle {
            font-family: 'Rajdhani', sans-serif;
            letter-spacing: 0.2em;
            text-shadow: 0 0 5px var(--neon-blue);
        }

        @@keyframes textFlicker {

            0%,
            19%,
            21%,
            23%,
            25%,
            54%,
            56%,
            100% {
                opacity: 1;
            }

            20%,
            24%,
            55% {
                opacity: 0.5;
            }
        }

        /* Button Positioning & Style */
        .pointing-target {
            position: absolute;
            /* Positioning based on the specific image composition (Joi on left pointing right) */
            top: 55%;
            left: 58%;
            transform: translate(-50%, -50%);
            z-index: 20;
        }

        .neon-button {
            background: rgba(0, 0, 0, 0.6);
            color: var(--neon-blue);
            font-family: 'Orbitron', sans-serif;
            text-transform: uppercase;
            letter-spacing: 2px;
            border: 2px solid var(--neon-blue);
            padding: 15px 30px;
            font-size: 1.2rem;
            font-weight: bold;
            cursor: pointer;
            box-shadow: 0 0 15px rgba(0, 255, 255, 0.2);
            transition: all 0.3s ease;
            text-decoration: none;
            display: inline-block;
            backdrop-filter: blur(5px);
        }

        .neon-button:hover {
            background: rgba(0, 255, 255, 0.2);
            box-shadow: 0 0 30px var(--neon-blue), inset 0 0 10px var(--neon-blue);
            text-shadow: 0 0 8px white;
            transform: scale(1.05);
        }

        /* Mobile adjustment */
        @@media (max-width: 768px) {
            .bg-scene {
                background-position: 20% center;
                /* Shift image to keep Joi visible on mobile */
            }

            .pointing-target {
                top: 60%;
                left: 50%;
                /* Center button more on mobile */
            }

            .content-wrapper {
                align-items: center;
                /* Center text on mobile */
            }

            .text-container {
                margin-left: 0 !important;
                text-align: center;
                margin-bottom: 200px;
                /* Push text up */
            }
        }
    </style>
</head>

<body>

    <div class="bg-scene"></div>
    <div class="bg-overlay"></div>
    <canvas id="rain-canvas"></canvas>

    <div class="content-wrapper">
        <!-- Text Container -->
        <div class="text-container ml-20 md:ml-32 mt-[-10%]">
            <h1 class="text-4xl md:text-6xl font-bold text-white mb-2 subtitle">YOU LOOK LOST</h1>
            <h2 class="text-5xl md:text-8xl font-black glitch-text">I CAN FIX THAT</h2>
        </div>

        <!-- The Button Joi is Pointing At -->
        <div class="pointing-target">
            <a href="/Dashboard" class="neon-button">
                RETURN HOME
            </a>
        </div>
    </div>

    <script>
        // Rain Effect Script
        const canvas = document.getElementById('rain-canvas');
        const ctx = canvas.getContext('2d');

        function resizeCanvas() {
            canvas.width = window.innerWidth;
            canvas.height = window.innerHeight;
        }
        resizeCanvas();

        const rainDrops = [];

        class Drop {
            constructor() {
                this.x = Math.random() * canvas.width;
                this.y = Math.random() * canvas.height;
                this.length = Math.random() * 20 + 10;
                this.speed = Math.random() * 8 + 4;
                this.opacity = Math.random() * 0.5 + 0.1;
            }

            fall() {
                this.y += this.speed;
                if (this.y > canvas.height) {
                    this.y = -this.length;
                    this.x = Math.random() * canvas.width;
                }
            }

            draw() {
                ctx.beginPath();
                ctx.moveTo(this.x, this.y);
                ctx.lineTo(this.x, this.y + this.length);
                ctx.strokeStyle = `rgba(189, 0, 255, ${this.opacity})`; // Neon purple rain
                ctx.lineWidth = 1.5;
                ctx.stroke();
            }
        }

        // Initialize drops
        for (let i = 0; i < 100; i++) {
            rainDrops.push(new Drop());
        }

        function animate() {
            ctx.clearRect(0, 0, canvas.width, canvas.height);
            rainDrops.forEach(drop => {
                drop.fall();
                drop.draw();
            });
            requestAnimationFrame(animate);
        }

        animate();

        window.addEventListener('resize', resizeCanvas);
    </script>
</body>

</html>
