@page "{code?}"
@model MVC.Pages.ErrorModel
@{
    ViewData["PageTitle"] = "Error";
    Layout = "_Layout";
}

@if (Model.ShowDetails)
{
    <div class="container py-5">
        <div class="row justify-content-center">
            <div class="col-lg-10">
                <div class="d-flex align-items-start bg-white border rounded shadow-sm p-4">
                    <div class="flex-shrink-0 me-3">
                        <svg width="48" height="48" viewBox="0 0 16 16" class="bi bi-exclamation-triangle-fill text-danger" fill="currentColor">
                            <path d="M8.982 1.566a1.13 1.13 0 0 0-1.964 0L.165 13.233c-.457.778.091 1.767.982 1.767h13.706c.89 0 1.438-.99.982-1.767L8.982 1.566zM8 5c.535 0 .954.462.9.995l-.35 3.507a.552.552 0 0 1-1.1 0L7.1 5.995A.905.905 0 0 1 8 5zm.002 6a1 1 0 1 1-2 0 1 1 0 0 1 2 0z"/>
                        </svg>
                    </div>

                    <div class="w-100">
                        <h3 class="h5 mb-1 text-danger">
                            Beklenmeyen bir hata oluştu
                        </h3>

                        <p class="text-muted">Aşağıda hata detayları yer almaktadır:</p>

                        <hr />

                        @if (!string.IsNullOrWhiteSpace(Model.Message))
                        {
                            <h4 class="text-dark">Mesaj:</h4>
                            <div class="alert alert-warning">@Model.Message</div>
                        }

                        @if (!string.IsNullOrWhiteSpace(Model.StackTrace))
                        {
                            <h4 class="text-dark">Stack Trace:</h4>
                            <pre class="border p-3 bg-light">@Model.StackTrace</pre>
                        }
                    </div>
                </div>
            </div>
        </div>
    </div>
}
else
{
    <h3>Bir hata oluştu.</h3>
}
